/* pages/freeBooks/freeBooks.wxss */
@import "../../pages/bookAbstract/bookAbstract.wxss"; 

.freeBooks{
  width:100%;
}
.freeLi{
  width:100%;
  height:200rpx;
  box-sizing: border-box;
  padding:0 30rpx;
  margin-top:40rpx;
}
.freeImg{
  display: inline-block;
  width:140rpx;
  height:200rpx;
  vertical-align: top;
}
.freeInfo{
  display: inline-block;
  width:540rpx;
  box-sizing: border-box;
  padding-left:20rpx;
}
.freeTitle{
  color:#505050;
  font-size:32rpx;
  width:100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.freeAuthor{
  color:#505050;
  font-size:28rpx;
  margin:8rpx 0 16rpx 0;
}
.freeAbstract{
  color:#505050;
  font-size:24rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}

/* pages/bookAbstract/bookAbstract.wxss */
.abstractHead{
  padding:50rpx 40rpx;
}
.bookImg{
  width:180rpx;
  height:260rpx;
  vertical-align: top;
}
.bookInfo{
  display:inline-block; 
  width:400rpx;
  margin-left:20rpx;
}
.bookName{
  font-size:32rpx;
  overflow: hidden;
  width:100%;
}
.category{
  font-size:24rpx;
  color:#999;
  margin-top:20rpx;
}
.categoryText{
  display: inline-block;
  padding:4rpx 10rpx;
  border:1px solid #009688;
  color:#009688;
  border-radius:8rpx;
}
.createTimt,.author,.status{
  font-size:24rpx;
  color:#999;
  margin-top:10rpx;
}
.buttonList{
  width:100%;
  box-sizing: border-box;
  padding:0 40rpx 30rpx 40rpx;
  border-bottom:1px solid #eee;
}
.buttonLi{
  display:inline-block;
  width:310rpx;
  height:70rpx;
  line-height:70rpx;
  text-align: center;
  font-size:28rpx;
  margin-right:40rpx;
  border-radius:35rpx;
}
.buttonLi:last-child{
  margin-right:0;
}
.addStore{
  color:#009688;
  border:1px solid #009688;
}
.beginLook{
  background:#009688;
  color:#fff;
}
.stractBody{
  width:100%;
  box-sizing: border-box;
  padding:10rpx 30rpx;
}
.title{
  font-size:24rpx;
  color:#000;
}
.content{
  font-size:28rpx;
  color:#999;
  text-indent: 2em;
  margin-top:10rpx;
}
.isStore{
  color:#999;
  border:1px solid #999;
}