/* pages/index/index.wxss */
page{
  width:100%;
  height:100%;
}
.find{
  width:100%;
  height:100%;
  box-sizing: border-box;
}
.swiperClass{
  width:100%;
  height:100%;
}
.updateLi{
  /* border:1px solid #eee; */
  margin:0 auto;
  background:#eee;
  height:90%;
  width:90%;
  margin-top:10%;
  border-radius:10rpx;
  box-sizing: border-box;
  text-align: center;
  position:relative;
}
.findImg{
  width:234rpx;
  height:342rpx;
  margin-top:100rpx;
}
.bookName{
  font-size:32rpx;
  margin-top:20rpx;
}
.bookAuthor{
  color:#434343;
  font-size:24rpx;
  margin-top:10rpx;
}
.readCount{
  position:absolute;
  bottom:20rpx;
  color:#434343;
  font-size:24rpx;
  left:40%;
}
.freeHead{
  width:360rpx;
  height:80rpx;
  line-height:80rpx;
  text-align: center;
  color:#808080;
  font-size:34rpx;
  margin:0 auto;
}
.freeBox{
  padding-top:30rpx;
  box-sizing: border-box;
}
.freeBody{
  margin-top:40rpx;
}
.freeLi{
  display:inline-block;
  width:130rpx;
  margin-right:20rpx;
  margin-bottom:20rpx;
  vertical-align: top;
}
.freeLi:nth-child(3n){
  margin-right:0;
}
.freeBoxImg{
  width:100%;
  height:190rpx;
}
.ferrBoxTitle{
  width:100%;
  height:70rpx;
  color:#505050;
  font-size:24rpx;
  text-align: left;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}
.lookMoreFree{
  position: fixed;
  top: 75vh;
  left: 75rpx;
  text-align: center;
  width:400rpx;
  height:90rpx;
  line-height:90rpx;
  border:1px solid #009688;
  border-radius:45rpx;
  font-size:28rpx;
  color:#009688;
  margin:0 auto;
  margin-top:80rpx;
  background:rgba(0, 0, 0, 0.0);
}
.githubTitle{
  font-size:30rpx;
  padding:20rpx;
}
.githubAddress{
  font-size:24rpx;
  text-align: center;
}
.githubBody{
  padding:30rpx 20rpx;
}
.gitLi{
  margin-bottom:20rpx;
}
.liTitle{
  font-size:30rpx;
  padding:20rpx;
  color:#009688;
}
.authorName{
  font-size:24rpx;
  color:#808080;
}
.star{
  font-size:24rpx;
  color:#808080;
  text-align: left;
  margin-top:20rpx;
  padding:0 20rpx;
}

.list {
margin-top: 40rpx;
height: auto;
width: 50%;
background: #fff;
padding: 0 40rpx;
border: 1px solid rgba(0, 0, 0, 0.1);
border-left: none;
border-right: none;
transition: all 300ms ease;
display: flex;
flex-direction: column;
align-items: stretch;
box-sizing: border-box;
}

.list-item {
width: 100%;
padding: 0;
line-height: 104rpx;
font-size: 34rpx;
color: #007aff;
border-top: 1px solid rgba(0, 0, 0, 0.1);
display: flex;
flex-direction: row;
align-content: center;
justify-content: space-between;
box-sizing: border-box;
}

.list-item:first-child {
border-top: none;
}

.list-item image {
max-width: 100%;
max-height: 20vh;
margin: 20rpx 0;
}